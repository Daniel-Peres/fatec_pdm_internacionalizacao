<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewPais"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/textViewPais"
        android:textSize="@dimen/pais_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imageViewBandeira"
        android:layout_width="@dimen/bandeira_layout_width"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/textViewPais"
        app:srcCompat="@drawable/bandeira" />

    <ImageView
        android:id="@+id/imageViewComida"
        android:layout_width="@dimen/comida_layout_width"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/textViewComida"
        app:srcCompat="@drawable/comida" />

    <TextView
        android:id="@+id/textViewComida"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/textViewComida"
        android:textSize="@dimen/comida_text_size"
        android:gravity="center" />

</LinearLayout>